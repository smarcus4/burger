<div class="container">

  <div class="row">

    <div class="col-md-12">
      <img src="/assets/img/burger.png" alt="burger" class="img-responsive center-block">
    </div>

  <!-- end first row -->
  </div>

  <div class="row">

    <div class="col-md-12">
      <h1 class="text-center text-danger">Eat-Da-Burger</h1>
    </div>
  
  <!-- end second row -->
  </div>

  <div class="row">

    <div class="col-md-5">
      <h3>Uneaten Burgers</h3>
        {{#each burgers}}
          {{#unless this.devoured}}
              <h5>{{this.id}}. {{this.burger_name}}
                <form action='burgers/update/{{this.id}}?_method=PUT' method='POST'>
                  <input type='hidden' name='devoured' value='true'>
                  <button type='submit' class="btn btn-default">Devour!</button>
                </form>
              </h5>
          {{/unless}}
        {{/each}}
    </div>

    <div class="col-md-2"></div>

    <div class="col-md-5">
      <h3 class="text-muted">Eaten Burgers</h3>
        {{#each burgers}}
          {{#if this.devoured}}
              <h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
          {{/if}}
        {{/each}}
    </div>

  <!-- end third row -->
  </div>

  <br><br>

  <div class="row">

    <div class="col-md-12 text-center">
      <form class="create-update-form" action="burgers/create" method="POST">
        <div class="form-group">
          <!-- <label for="bg">Burger Name:</label> -->
          <textarea type="text" name="name"></textarea><br>
          <button class="btn btn-default" type="submit">Submit</button>
          <h5 class="text-center">Enter a burger you want to eat and click Submit!</h5>
        </div>
      </form>
    </div>

  <!-- end fourth row -->
  </div>

<!-- end bootstrap container -->
</div>